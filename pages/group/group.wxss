page{
    width: 100%;
    height: 100%
}
.content{
    width: 100%;
    height: 100%;
    position: absolute;
}
.right_catetory_list{
    position: absolute;
    left: 0px;
    top: 0px;
    width: 25%;
    height: 100%;
    background-color: #eee;

}
.right_catetory_list_item{
    width: 100%;
    height: 44px;
    position: relative;
}
.right_catetory_list_text{
    text-align: center;
    position: absolute;
    width: 74px;
    top: 14px;
    height: 20px;
    left: 1px;
    font-size: 15px;
    vertical-align: 11px;  
    word-break:keep-all;           /* 不换行 */
    white-space:nowrap;          /* 不换行 */
    overflow:hidden;               /* 内容超出宽度时隐藏超出部分的内容 */
    text-overflow:ellipsis;  
}
.right_catetory_right_line{
    position: absolute;
    height: 100%;
    width: 1px;
    top: 0px;
    left: -px;
}
    .right_catetory_right_line_backcolor_red{
            background-color: red;
    }
    .right_catetory_right_line_backcolor_ddd{
            background-color: #ddd;
    }

.right_cate_list_line{
    position: absolute;
    background-color: #ddd;
    height: 1px;
    width: 100%;
    bottom: 0px;
}
.item{
    width:100%;
    height:100px;
    position:relative;
}
.item_line{
    background-color: #ddd;
    position: absolute;
    top: 99px;
    height: 1px;
    width: 100%;
}
.item_left_image_back{
    width:90px;
    height: 90px;
    position: absolute;
}
.item_left_image{
    ime-mode: scaleToFill;
    width: 100%;
    height: 100%
}
.item_right_view_back{
    left:90px;
    top: 0px;
    bottom: 1px;
    right: 0px;
    position: absolute;
}
.item_right_title{
    position: absolute;
    top: 10px;
    left: 5px;
    right: 5px;
    height: 20px;
    font-size: 15px;
    word-break:keep-all;           /* 不换行 */
    white-space:nowrap;          /* 不换行 */
    overflow:hidden;               /* 内容超出宽度时隐藏超出部分的内容 */
    text-overflow:ellipsis;
}
.item_right_good_tag{
    font-size: 11px;
    color: white;
    border-color: red;
    background-color: red;
    border-radius: 2px;
    position: absolute;
    text-align: center;
    top: 29px;
    left:5px;
    height: 13px;
    width: 25px;
}
.item_right_good_specification{
    position: absolute;
    font-size: 13px;
    top: 45px;
    left: 5px;
    right: 5px;
    height: 20px;
}
.item_right_add_image{
    width: 20px;
    height: 20px;
    ime-mode: scaleToFill;
    position: absolute;
    right: 10px;
    bottom: 5px;
}
.item_right_reduce_image{
    width: 20px;
    height: 20px;
    ime-mode: scaleToFill;
    position: absolute;
    right: 50px;
    bottom: 5px;
}
.item_right_good_buy_number{
    width: 20px;
    height: 20px;
    ime-mode: scaleToFill;
    position: absolute;
    right: 30px;
    bottom: 4px;
    text-align: center;
}
.item_right_good_sale_count{
    position: absolute;
    font-size: 13px;
    left: 5px;
    right: 5px;
    height: 20px;
    bottom: 15px;
}
.item_right_good_price{
    bottom: 5px;
    height: 15px;
    left: 5px;
    color: red;
    float: left;
    font-size: 14px;
}
.item_right_good_mark_price{
    height: 15px;
    float: left;
    font-size: 13px;
    text-decoration:line-through;
    margin-left: 5px;
}
.item_rice{
    height: 20px;
    width: 80%;
    bottom: 0px;
    position: absolute;
}
.none_data{
    position:absolute;
    width: 100%;
    top: 100px;
    text-align: center
}